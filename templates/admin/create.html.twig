{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .required:after {
            content:" *";
            color: red;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="flex items-center flex-col">
        <img src="{{ asset('/images/logo.png') }}" class="w-40 pb-6">
        <div>
            {% for label, messages in app.flashes(['success', 'warning']) %}
                {% for message in messages %}
                    <div class="border rounded bg-green-100 p-2 mb-8" role="alert">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}
        </div>
        <div>
            {{ form_start(form) }}
                <div class="flex flex-col">
                    <div>
                        <span class="font-bold text-xl">Informations sur l'offre</span>
                        <div class="grid grid-cols-2 gap-4 border rounded p-4 mb-8 bg-gray-100">
                            <div class="flex flex-col">
                                {{ form_label(form.title, 'Titre de l\'offre') }}
                                {{ form_widget(form.title, {'attr': {'class': 'bg-white rounded border border-dark-600 p-3 mb-2'}}) }}
                            </div>
                            <div class="flex flex-col">
                                {{ form_label(form.file, 'Fichier HTML de Notion') }}
                                {{ form_widget(form.file, {'attr': {'class': 'bg-white rounded border border-dark-600 p-2 mb-2'}}) }}
                            </div>
                        </div>
                        <div class="grid grid-cols-1 gap-4 border rounded p-4 mb-8 bg-gray-100">
                            <div class="flex flex-col">
                                {{ form_label(form.description, 'Description de l\'offre') }}
                                {{ form_widget(form.description, {'attr': {'class': 'bg-white col-span-2 rounded border border-dark-600 p-3 mb-2'}}) }}
                            </div>
                        </div>
                    </div>
                </div>
                <div>
                    {{ form_widget(form.save, {'attr': {'class': 'bg-gray-900 text-white rounded border border-dark-600 p-2 w-full mt-2 hover:bg-gray-800'}}) }}
                </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}